<div id="homeHeader">
  <h1>Votre profil</h1>
  <i>Consulter vos données personnelles</i>
  <br> <br>
</div>

<div class="ui form" style="margin-bottom: 25px;">
    <div class="inline fields">
        <div class="field">
            <label id="" class="inputLabel" for="frmEdit-nom">Nom</label>
            <div id="div-frmEdit-nom" class="ui input">
                {{input id="frmEdit-nom" value=model.nom placeholder="Nom"}}
            </div>
            <button class="circular ui icon button" style="float: right">
                <i class="icon circle check green"></i>
            </button>
        </div>
    </div>

    <div class="inline fields">
        <div class="field">
            <label id="" class="inputLabel" for="frmEdit-prenom">Prénom</label>
            <div id="div-frmEdit-prenom" class="ui input">
                {{input id="frmEdit-prenom" value=model.prenom placeholder="Prénom"}}
            </div>
            <button class="circular ui icon button" style="float: right">
                <i class="icon circle check green"></i>
            </button>
        </div>
    </div>

    <div class="inline fields">
        <div class="field">
            <label id="" class="inputLabel" for="frmEdit-pseudo">Pseudo</label>
            <div id="div-frmEdit-pseudo" class="ui input">
                {{input id="frmEdit-pseudo" value=model.pseudo placeholder="Pseudo"}}
            </div>
            <button class="circular ui icon button" style="float: right">
                <i class="icon circle check green"></i>
            </button>
        </div>
    </div>

    <div class="inline fields">
        <div class="field">
            <label id="" class="inputLabel" for="frmEdit-email">Email</label>
            <div id="div-frmEdit-email" class="ui input">
                {{input id="frmEdit-email" value=model.email placeholder="Email"}}
            </div>
            <button class="circular ui icon button" style="float: right">
                <i class="icon circle check green"></i>
            </button>
        </div>
    </div>

    <div class="inline fields">
        <div class="field">
            <label id="" class="inputLabel" for="frmEdit-mdp">Mot de passe</label>
            <div id="div-frmEdit-mdp" class="ui input">
                {{input id="frmEdit-mdp" value=model.password placeholder="Mot de passe" type="password"}}
            </div>
            <button class="circular ui icon button" style="float: right">
                <i class="icon circle check green"></i>
            </button>
        </div>
    </div>
</div>
{{outlet}}

