<div id="homeHeader" style="text-align: center; border-bottom: 2px solid grey; border-top: 2px solid grey; padding-top: 15px; margin-bottom: 25px">
  <h1>Projet {{model.name}}</h1>
  <i>Consulter les stories liées à vos projets</i>
  <br> <br>
</div>

<div>
  <div class="ui button primary">
    <i class="file open icon"></i> Stories
  </div>
  <div class="ui button">
    <i class="users open icon"></i> Developpeurs
  </div>

  <br><br>

  <div>
    {{#link-to "story.new" model.id class="ui button"}}<i class="ui plus icon"></i> Ajouter une story au projet...{{/link-to}}

    {{#link-to "projects" class="ui button"}}<i class="caret square left icon"></i>Retour aux projets{{/link-to}}
  </div>

</div>

<br>


<div class="ui divider"></div>
<div class="ui middle aligned divided list">
  {{#each model.stories as |story|}}
  <div class="item">
    <div class="right floated content">
      <div class="ui left labeled button" tabindex="0">
        <a class="ui basic right pointing label">
          {{story.developer.identity}}
        </a>
        {{#link-to "story.update" model.id class="ui button"}}
          <i class="user icon"></i> Mise à jour...
        {{/link-to}}
      </div>
    </div>
    <i class="big file middle aligned icon"></i>
    <div class="content">
      <div class="header">
        {{story.code}}
      </div>
      <div class="description">
        {{story.description}}
        {{#each story.tags as |tag|}}
          <a class="ui {{tag.color}} label">{{tag.title}}</a>
        {{/each}}
      </div>
    </div>
  </div>
 {{/each}}
</div>

{{outlet}}

