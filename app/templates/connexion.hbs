<div id="homeHeader">
  <h1>Connectez-vous</h1>
  <i>Connectez-vous afin de retrouver tout vos projets</i>
  <br> <br>
</div>

<div>

  <div style="width: 50%; margin-left: 25%">
    <img src="assets/img/login.png" class="center">
  </div>

  <br>
  <div class="ui form" style="margin-bottom: 25px; text-align: center">
    <div class="field">
      <label>Pseudo</label>
      <div id="" class="ui input" style="width: 33%;">
        {{input id="" value=model.pseudo placeholder="Pseudo"}}
      </div>
    </div>
    <div class="field">
      <label style="">Mot de passe</label>
      <div id="" class="ui input" style="width: 33%;">
        {{input id="" value=model.password placeholder="Mot de passe" type="password"}}
      </div>
    </div>
    <div class="field" style="text-align: center">
      <label>
        <i class="question circle icon"></i>
        {{#link-to "index" class="item"}}Mot de passe oublié?{{/link-to}}
      </label>
    </div>

    <button class="ui button inputForm green" {{action "connexion"}}>Connexion</button>
  </div>


</div>

